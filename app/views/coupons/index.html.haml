- provide(:title, "我的优惠券")
#content.coupons-box
  = render "shared/dashboard"
  .mainbox.mine
    = render "subbar"
    %table#order-list.coupons-table{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
      %tr
        %th{:width=>"auto"} 优惠券
        %th{:width=>"100"} 状态
        %th{:width=>"100"} 密码
        %th{:width=>"100"} 操作
      - @coupons.each do |coupon|
        %tr{:class => cycle("alt", "")}
          %td= coupon.product.title
          %td= coupon.status
          %td= coupon.password
          %td
            = link_to "编辑", "#"
            | 
            = link_to "删除", "#"

