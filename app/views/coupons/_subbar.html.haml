%h2
  - case action_name 
  - when "index"
    = t('coupons.index.title')
  - when "unuse"
    = t('coupons.unuse.title')
  - when "used"
    = t('coupons.used.title')
%uj.filter
  %li{:class => (action_name == "index" ? "current" : nil)}
    = link_to t('.all_button'), coupons_path
  %li{:class => (action_name == "unuse" ? "current" : nil)}
    = link_to t('.unuse_button'), unuse_coupons_path
  %li{:class => (action_name == "used" ? "current" : nil)}
    = link_to t('.used_button'), used_coupons_path
  /%li{:class => (action_name == "filter" ? "current" : nil)}
  /  = link_to "即将到期", "#"
  /%li{:class => (action_name == "filter" ? "current" : nil)}
  /  = link_to "已过期", "#"
