#filter.radius-box-shadow
  .filter-section.type
    %span.label= t('.category')
    %ul
      %li{:class => (action_name != "today" && action_name != "category" ? "current" : nil)}
        = link_to t('.all'), root_path
      %li{:class => (action_name == "today" ? "current" : nil)}
        = link_to "#{t('.today')}<span>(#{today_product_count})</span>".html_safe, today_filters_path
      - @categories.each do |category|
        %li{:class => (action_name == "category" && params[:id].to_i == category.id ? "current" : nil)}
          = link_to "#{category.cn_name}<span>(#{on_shelf_count(category.products)})</span>".html_safe, category_filter_path(category)
  .filter-section
    %span.label= t('.district')
    %ul
      %li{:class => (action_name != "district" ? "current" : nil)}
        = link_to t('.all'), root_path
      - @districts.each do |district|
        %li{:class => (action_name == "district" && params[:id].to_i == district.id ? "current" : nil)}
          = link_to "#{district.cn_name}<span>(#{on_shelf_count(district.products)})</span>".html_safe, district_filter_path(district)

