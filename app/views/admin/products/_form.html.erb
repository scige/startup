<% form_action = { :controller => "admin/products", :action => "create" } %>
<% if form_type == "edit" %>
    <% form_action = { :controller => "admin/products", :action => "update", :id => @product.id } %>
<% end %>

<%= form_for @product, :url => form_action do |f| %>
    <table id="admin-products-table">
        <tr>
            <td>商品名称：</td><td><%= f.text_field :product_name, :size=>50 %></td>
        </tr>
        <tr>
            <td>商家名称：</td><td><%= f.text_field :shop_name, :size=>50 %></td>
        </tr>
        <tr>
            <td>类别：</td><td><%= f.text_field :category, :size=>50 %></td>
        </tr>
        <tr>
            <td>区域：</td><td><%= f.text_field :district, :size=>50 %></td>
        </tr>
        <tr>
            <td>区域名称：</td><td><%= f.text_field :district_name, :size=>50 %></td>
        </tr>
        <tr>
            <td>商品图片：</td><td><%= f.text_field :image_path, :size=>50 %></td>
        </tr>
        <tr>
            <td>封面图片：</td><td><%= f.text_field :cover_path, :size=>50 %></td>
        </tr>
        <tr>
            <td>封面名称：</td><td><%= f.text_field :cover_name, :size=>50 %></td>
        </tr>
        <tr>
            <td>销售价格：</td><td><%= f.text_field :sale_price, :size=>50 %></td>
        </tr>
        <tr>
            <td>市场价格：</td><td><%= f.text_field :original_price, :size=>50 %></td>
        </tr>
        <tr>
            <td>销售数量：</td><td><%= f.text_field :sale_count, :size=>50 %></td>
        </tr>
        <tr>
            <td>结束时间：</td><td><%= f.text_field :overtime_at, :size=>50 %></td>
        </tr>
    </table>
    <table id="admin-products-table">
        <tr>
            <td>详细内容：</td>
            <td>
                <%= javascript_include_tag "ckeditor/init" %>
                <%= f.cktext_area :content %>
            </td>
        </tr>
        <tr>
            <td></td>
            <td id="admin-products-table-submit">
                <%= f.submit "提交" %>
                <%= f.submit "预览", :name => "preview" %>
            </td>
        </tr>
    </table>
<% end %>

