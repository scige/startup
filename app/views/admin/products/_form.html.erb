<% form_action = { :controller => "admin/products", :action => "create" } %>
<% if form_type == "edit" %>
    <% form_action = { :controller => "admin/products", :action => "update", :id => @product.id } %>
<% end %>

<%= form_for @product, :url => form_action do |f| %>
    商品名称：<%= f.text_field :product_name %><br/>
    商家名称：<%= f.text_field :shop_name %><br/>
    类别：<%= f.text_field :category %><br/>
    区域：<%= f.text_field :district %><br/>
    区域名称：<%= f.text_field :district_name %><br/>
    商品图片：<%= f.text_field :image_path %><br/>
    封面图片：<%= f.text_field :cover_path %><br/>
    封面名称：<%= f.text_field :cover_name %><br/>
    销售价格：<%= f.text_field :sale_price %><br/>
    市场价格：<%= f.text_field :original_price %><br/>
    销售数量：<%= f.text_field :sale_count %><br/>
    失效时间：<%= f.text_field :overtime_at %><br/>
    详细内容：<%= f.text_field :content %><br/>
    <%= f.submit "提交" %>
<% end %>
