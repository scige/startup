%h2
  - case action_name 
  - when "index"
    = t('admin.products.index.title')
  - when "new"
    = t('admin.products.new.title')
  - when "create"
    = t('admin.products.new.title')
  - when "edit"
    = t('admin.products.edit.title')
  - when "update"
    = t('admin.products.edit.title')
%uj.filter
  %li{:class => (action_name == "index" ? "current" : nil)}
    = link_to t('.index_button'), admin_products_path
  %li{:class => ((action_name == "new" or action_name == "create") ? "current" : nil)}
    = link_to t('.new_button'), new_admin_product_path

