%h2
  - case action_name 
  - when "index"
    = t('admin.products.index.title')
  - when "new"
    = t('admin.products.new.title')
  - when "create"
    = t('admin.products.new.title')
  - when "edit"
    = t('admin.products.edit.title')
  - when "update"
    = t('admin.products.edit.title')
  - when "on_shelf"
    = t('admin.products.on_shelf.title')
  - when "off_shelf"
    = t('admin.products.off_shelf.title')
%uj.filter
  %li{:class => (action_name == "index" ? "current" : nil)}
    = link_to t('.index_button'), admin_products_path
  %li{:class => (action_name == "on_shelf" ? "current" : nil)}
    = link_to t('.on_shelf_button'), on_shelf_admin_products_path
  %li{:class => (action_name == "off_shelf" ? "current" : nil)}
    = link_to t('.off_shelf_button'), off_shelf_admin_products_path
  %li{:class => ((action_name == "new" or action_name == "create") ? "current" : nil)}
    = link_to t('.new_button'), new_admin_product_path

