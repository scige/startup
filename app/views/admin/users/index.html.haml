#content.coupons-box
  #content-admin
    = render "admin/shared/dashboard"
    .mainbox.mine
      = render "subbar"
      %table#order-list.coupons-table{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
        %tr
          %th{:width=>"auto"} 编号
          %th{:width=>"100"} 用户名
          %th{:width=>"100"} 邮箱
          %th{:width=>"100"} 手机
          %th{:width=>"100"} 管理权限
          %th{:width=>"100"} 操作

        - @users.each do |user|
          %tr{:class => cycle("alt", "")}
            %td= user.id
            %td= user.name
            %td= user.email
            %td= user.mobile
            %td= user.admin
            %td
              = link_to "编辑", edit_admin_user_path(user)
              | 
              = link_to "删除", admin_user_path(user), :method => :delete, :confirm => "删除后不可恢复，确定删除？"

