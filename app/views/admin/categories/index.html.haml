- provide(:title, t('.title'))
#content.coupons-box
  #content-admin
    = render "admin/shared/dashboard"
    .mainbox.mine
      = render "subbar"
      %table#order-list.coupons-table{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
        %tr
          %th{:width=>"auto"}= t('.head_id')
          %th{:width=>"100"}= t('.head_cn_name')
          %th{:width=>"100"}= t('.head_en_name')
          %th{:width=>"100"}= t('.head_parent_id')
          %th{:width=>"100"}= t('.head_operation')

        - @categories.each do |category|
          %tr{:class => cycle("alt", "")}
            %td= category.id
            %td= category.cn_name
            %td= category.en_name
            %td= category.parent_id
            %td
              = link_to t('.edit_button'), edit_admin_category_path(category)
              | 
              = link_to t('.delete_button'), admin_category_path(category), :method => :delete, :confirm => t('.delete_confirm')

