#bdw
  #bd.cf
    .bread-nav
      = link_to "北京团购", "/"
      %span »
      = link_to "海淀区", "/category/all/haidianqu"
      %span »
      = link_to ">远大路", "/category/all/yuandalu"
      %span »
      = link_to "美食", "/category/meishi/yuandalu"
      %span »
      = link_to "火锅", "/category/huoguo/yuandalu"
      %span »
      金源福城肥牛2-3人套餐
    #content
      #deal-intro.cf
        %h1.deal-brand= "【#{@product.district_name}】#{@product.shop_name}"
        %h2.deal-title= @product.product_name
        .main
          .deal-buy.deal-price-tag-open
            %strong= "¥ #{integer_of_value @product.sale_price}"
            = link_to "抢购", "/deal/buy/720541", {:rel=>"nofollow"}
          .deal-info
            %table.deal-discount
              %tbody
                %tr
                  %th 价值
                  %th 折扣
                  %th 节省
                %tr
                  %td
                    %del
                      %span= "¥#{@product.original_price}"
                  %td= "#{discount}折"
                  %td= "¥#{save_price}"
            .deal-status
              %p.deal-status-count
                %strong= @product.sale_count
                人已购买
              %p.deal-status-time-left.deal-on
                剩余
                %span
                  %strong 3
                  天以上
            %p 拉长测试
            %p 拉长测试
            %p 拉长测试
            %p 拉长测试
            %p 拉长测试
            %p 拉长测试
            %p 拉长测试
        .side
          .deal-buy-cover-img
            = image_tag @product.image_path
      #deal-stuff
        .mainbox.cf
          .main
            %h2 本单详情
            .blk.detail
              = @product.content
              = markdown @product.content
          .side
          .deal-buy-bottom
            %span.price.num= "¥#{integer_of_value @product.sale_price}"
            = link_to "抢购", "/deal/buy/720541", {:rel=>"nofollow", :hidefocus=>"true"}
            %ul.cf
              %li
                价值
                %br
                %del.num
                  %span= "¥#{@product.original_price}"
              %li
                折扣
                %br
                %span.num= "#{discount}折"
              %li
                已购买
                %br
                %span.num= "#{@product.sale_count}人"
    #sidebar
