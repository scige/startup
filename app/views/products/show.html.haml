- provide(:title, @product.title)
.bread-nav
  = link_to "今日优惠", "/"
  %span> »
  = link_to "#{@product.district.cn_name}", district_filter_path(@product.district)
  %span> »
  = link_to "#{@product.category.cn_name}", category_filter_path(@product.category)
  %span> »
  = @product.title

#content
  #deal-intro.cf
    .clearfix.floatLeft
      .discountContentWrap
        .globalTitle
          %h1.title= @product.title
        .discountInfoWrap.clearfix
          .discountInfoLSide.floatLeft
            %ul.infoImgSilde
              %li
                = image_tag( @product.image_url(:normal), :width => "260", :height => "195", :title => "点击查看详情", :alt => @product.title )
          .discountInfoRSide.floatLeft
            %ul
              %li.listCol
                %label.floatLeft 打折时间：
                .floatLeft.fRSide
                  %span= "#{@product.begin_at.strftime('%Y年%m月%d日')}至#{@product.end_at.strftime('%Y年%m月%d日')}"
              %li.listCol.clearfix
                %label.floatLeft 折扣范围：
                .floatLeft.fRSide
                  %span.couponNum= @product.discount
                  折
              %li.listCol.clearfix
                %label.floatLeft= "地&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;址：".html_safe
                .floatLeft.fRSide
                  %span= @product.address
              %li.listCol.clearfix
                %label.floatLeft= "电&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;话：".html_safe
                .floatLeft.fRSide
                  %span= @product.phone
              %li.listCol.clearfix
                %label.floatLeft 用户印象：
                .floatLeft.fRSide
                  %span 暂无
              %li.listCol.clearfix
                = link_to image_tag( "/assets/shop_now_c.jpg", :width=>"130", :height=>"44" ), "#", :onclick=>"showModal();"
  #deal-intro.cf
    .clearfix.floatLeft
      .discountContentWrap
        .discountDetailsInfo
          %h2.title 详细信息
          %p= @product.content.html_safe
          %p= "&nbsp;&nbsp;&nbsp;&nbsp;电话：".html_safe + @product.phone
          %p= "&nbsp;&nbsp;&nbsp;&nbsp;地址：".html_safe + @product.address

#sidebar
  .side-single
    #mapbox
    = javascript_include_tag "http://api.map.baidu.com/api?v=1.3"
    :javascript
      var map = new BMap.Map("mapbox");
      var point = new BMap.Point(126.507328, 43.825834);

      var marker1 = new BMap.Marker(new BMap.Point(126.507328, 43.825834));
      map.addOverlay(marker1);

      var infoWindow1 = new BMap.InfoWindow("利群超市");
      marker1.addEventListener("click", function(){this.openInfoWindow(infoWindow1);});

      map.centerAndZoom(point,15);
      map.enableScrollWheelZoom();
    #maplink
      查看大图

