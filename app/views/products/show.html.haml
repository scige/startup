    %h3 发送到手机
    = form_tag coupons_path do |f|
      = hidden_field_tag :product_id, @product.id
      = label_tag :title, @product.title
      %br
      = label_tag :mobile, "手机："
      = text_field_tag :mobile, nil
      %br
      = label_tag :captcha, "验证码："
      = text_field_tag :captcha, nil
      %br
      = submit_tag "确定"
      %input{:type=>"button", :value=>"取消", :name=>"cancel", :onclick=>"hideModal();"}

