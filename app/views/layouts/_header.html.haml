  .search.cf.radius-box-shadow
    %form{:action=>"/s/", :name=>"searchForm", :method=>"get"}
    = form_tag search_filters_path, :method=>"post" do |f|
      = text_field_tag :keywords, nil, {:class=>"s-text", :autocomplete=>"off", :placeholder=>t('.keyword_background')}
      = submit_tag t('.search_button'), {:class=>"s-submit", :hidefocus=>"true"}
.site-nav
  .nav-wrapper.cf.radius-box-shadow
    %ul.nav
      %li= link_to "今日优惠", root_path, {:class=>"hover"}
      %li= link_to "美食", category_filter_path(1)
      %li= link_to "娱乐", category_filter_path(2)
      %li= link_to "电影", category_filter_path(3)
      %li= link_to "酒店", category_filter_path(4)
    %ul.user-info
      - if logined?
        %li.name= t('.welcome', :user_name=>current_user.name)
      %li.account
        = link_to t('.my_info'), account_path, {:class=>"my-account"}
        %i.tri
        %ul.account-menu{:style=>"display:none"}
          %li= link_to "我的优惠券", "/orders/list/unused", {:class=>"first"}
          %li= link_to "未使用", "/account/credit"
          %li= link_to "已使用", "/account/credit"
          %li= link_to "个人信息", "/account/credit"
          %li= link_to "账户设置", "/account/settings", {:class=>"last"}
      - if logined?
        %li.login= link_to t('.logout'), logout_path, :method => :delete
      - else
        %li.login= link_to t('.login'), login_path
        %li.login.last= link_to t('.signup'), signup_path

