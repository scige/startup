#site-top.cf
  %h1= link_to image_tag("/assets/logo.png", :width=>"108", :height=>"66", :title=>"天天优惠", :alt=>"天天优惠"), "/"
  .site-info
    %ul
      %li= link_to "邮件订阅", "/subscribe", {:class=>"subscribe"}
      %li= link_to "加入收藏夹", "javascript:void(0);", {:class=>"fav", :id=>"favorite"}
      %li= link_to "邀请好友", "/referrals", {:class=>"refer", :target=>"_blank"}
      %li= link_to "常见问题", "/faq", {:class=>"last"}
  .search.cf
    %form{:action=>"/s/", :name=>"searchForm", :method=>"get"}
      %input.s-text{:name=>"w", :autocomplete=>"off", :placeholder=>"请输入商品名称、地址等", :type=>"text"}
      %input.s-submit{:hidefocus=>"true", :value=>"搜索", :type=>"submit"}
.site-nav
  .nav-wrapper.cf
    %ul.nav
      %li= link_to "今日优惠", "/", {:class=>"hover"}
      %li= link_to "美食", "/meishi/all"
      %li= link_to "娱乐", "/yule/all"
      %li= link_to "电影", "/dianying/all"
      %li= link_to "生活", "/shenghuo/all"
      %li= link_to "酒店旅游", "/lvyou/all"
    %ul.user-info
      - if logined?
        %li.name= "欢迎您，#{current_user.name}"
      %li.account
        / 有了优惠券以后，去掉if判断，修改路由到coupon#index
        /  = link_to "我的信息", account_path, {:class=>"my-account"}
        - if logined?
          = link_to "我的信息", user_path(current_user), {:class=>"my-account"}
        - else
          = link_to "我的信息", account_path, {:class=>"my-account"}
        %i.tri
        .account-menu{:style=>"display:none"}
          %ul.comment-info
            %li= link_to "未使用", "/orders/list/unused", {:class=>"first"}
            %li= link_to "待付款", "/orders/list/unpaid"
            %li= link_to "待评价", "/rates"
            %li= link_to "我的收藏", "/collections"
            %li.space
          %ul.base-info
            %li= link_to "我的订单", "/orders/", {:class=>"first"}
            %li= link_to "账户余额", "/account/credit"
            %li= link_to "余额充值", "/account/charge"
            %li= link_to "积分/邀请", "/account/points"
            %li= link_to "账户设置", "/account/settings", {:class=>"last"}
      - if logined?
        %li.login= link_to "退出", logout_path, :method => :delete
      - else
        %li.login= link_to "登录", login_path
        %li.login.last= link_to "注册", signup_path

