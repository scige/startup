- provide(:title, t('.login'))

#content.pg-login
  .mainbox.radius-box-shadow
    %h2= t('.login') 
    .signup-section
      = form_for(resource, :as=>resource_name, :url=>session_path(resource_name)) do |f|
        .field-group
          = f.label :name, t('.name')
          = f.text_field :name, :class=>"f-text"
        .field-group
          = f.label :password, t('.password')
          = f.password_field :password, :class=>"f-text"
        .field-group.auto-login
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = t('.auto_login')
        .field-group
          = f.submit t('.login_button'), :class=>"form-button"
          %span#signup-span
            = t('.no_signup')
            = link_to t('.signup_button'), new_user_registration_path

