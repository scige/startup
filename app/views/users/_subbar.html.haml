%h2
  - case action_name 
  - when "show"
    = t('users.show.title')
  - when "edit"
    = t('users.edit.title')
  - when "update"
    = t('users.edit.title')
%uj.filter
  %li{:class => (action_name == "show" ? "current" : nil)}
    = link_to t('.show_button'), user_path(@user)
  %li{:class => ((action_name == "edit" or action_name == "update") ? "current" : nil)}
    = link_to t('.edit_button'), edit_user_path(@user)

