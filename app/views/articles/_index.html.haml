#content-index
  - @articles.each do |article|
    #filter.radius-box-shadow
      .clearfix
        .couponContentWrap
          .couponInfoWrap.clearfix
            .couponInfoLSide.floatLeft
              %ul.infoImgSilde
                %li
                  = link_to image_tag( article.thumb, :title => article.title, :alt => article.title ), article_path(article), { :target => "_blank" }
            .couponInfoRSide.floatLeft
              .globalTitle.title
                = link_to article.title, article_path(article), { :target => "_blank" }
              %ul
                %li.listCol
                  %label.floatLeft= t('.time')
                  .floatLeft.fRSide
                    %span= get_format_time(article.updated_at)
                %li.listCol.clearfix
                  = article.content

  .page-nav-wrapper
    = paginate @articles

